{
  "name": "indexer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "apibara prepare",
    "dev:dapp": "apibara dev --indexers medialano-dapp --preset=sepolia",
    "dev:mipp": "apibara dev --indexers medialano-mipp --preset=sepolia",
    "api:dev": "ts-node-dev src/server.ts",
    "build:indexer": "apibara build",
    "build:api": "tsc --project tsconfig.api.json",
    "build": "pnpm run build:indexer && pnpm run build:api",

    "start:indexer:dapp": "pnpm run build:indexer && apibara start --indexer medialano-dapp --preset",
    "start:indexer:mipp": "pnpm run build:indexer && apibara start --indexer medialano-mipp --preset",

    "start:api:deploy": "pnpm run drizzle:generate && pnpm run drizzle:push && pnpm run build:api && node dist/api/server.js",

    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:push": "drizzle-kit push",
    
    "typecheck": "tsc --noEmit",
    "typecheck:api": "tsc --project tsconfig.api.json --noEmit"
  },
  "dependencies": {
    "@apibara/plugin-drizzle": "next",
    "@apibara/protocol": "next",
    "@apibara/starknet": "next",
    "@electric-sql/pglite": "^0.2.17",
    "apibara": "next",
    "drizzle-kit": "^0.29.0",
    "drizzle-orm": "^0.40.1",
    "pg": "^8.13.1",
    "starknet": "^7.6.4"
  },
  "devDependencies": {
    "@types/node": "^20.5.2",
    "@types/pg": "^8.11.10",
    "typescript": "^5.6.2"
  }
}
